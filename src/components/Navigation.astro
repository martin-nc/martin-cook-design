---
const { pathname } = Astro.url;
---

<div class="nav-container">
  <button
    id="hamburger-menu"
    class="nav-button"
    aria-label="Main menu"
    aria-expanded="false"
    aria-controls="main-nav"
  >
    <svg viewBox="0 -10 80 80" width="25" height="25">
      <rect width="100" height="10"></rect>
      <rect y="27" width="100" height="10"></rect>
      <rect y="54" width="100" height="10"></rect>
    </svg>
  </button>
  <nav id="main-nav" class="hidden">
    <ul class="main-nav-list white-links m-0 p-0">
      <li>
        <a aria-current={pathname === "/" ? "page" : "false"} href="/">Home</a>
      </li>
      <li>
        <a
          aria-current={pathname === "/how-help/" ? "page" : "false"}
          href="/how-help/">How I can help</a
        >
      </li>
      <li>
        <a
          aria-current={pathname === "/how-much-costs/" ? "page" : "false"}
          href="/how-much-costs/">How much it costs</a
        >
      </li>
      <li>
        <a
          aria-current={pathname === "/about/" ? "page" : "false"}
          href="/about/">About</a
        >
      </li>
      <li>
        <a
          aria-current={pathname.startsWith("/advice") ? "page" : "false"}
          href="/advice/">Advice</a
        >
      </li>
    </ul>
  </nav>
</div>
